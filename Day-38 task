#include <iostream>
using namespace std;

int main() {
	int t,n,a,b;
	cin>>t;
	while(t>0)
	{
	    cin>>n>>a>>b;
	    string s;
	    cin>>s;
	    int count_a=0,count_b=0;
	    for(int i=0;i<n;i++)
	    {
	        if(s[i]=='1')
	        {
	            count_a++;
	        }
	            else
	            {
	                count_b++;
	            }
	    }
	    cout<<(count_a*b)+(count_b*a)<<endl;
	    t--;
	}
	return 0;
}
